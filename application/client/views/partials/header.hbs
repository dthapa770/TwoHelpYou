{{!-- Navigational bar --}}
<div class = "cross_screen_row main_navbar"> 
  <div id="default_nav"><a href="/" >Home</a> | <a href="/about_us" >About US</a> | </div>
  <form id="search_form">
    <div class="search_bar">
      <select name="{{prefix}}" id="select_menu">
        <option value="">All</option>
        {{#each course as |c|}}
          <option id="{{c.course_prefix}}" value="{{c.course_prefix}}"> 
