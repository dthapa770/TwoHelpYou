 <!-- Login Modal -->
<div id="login_modal" class="modal">

<!-- Login content -->
  <div class="modal-content">
    <span class="close close_login">&times;</span>
    <form class="requires-validation login_box" novalidate id="login_page" method="POST" action="/users/login"
        enctype="application/x-www-form-urlencoded" >
        <h2>Login</h2>
        <div class="login_input_1">
            <div>
                <label for="user_name">Username: <div> <label id="login_user_message" class="small">Username must be 3 or more characters </label> </div></label>
                <input class="login_input_2" type="text" name="user_name" id="user_name" required placeholder="Username" minlength="3"/>
            </div>
            <div>
                <label for="password">Password: <div> <label id="login_password_message" class="small">Password must contain 8 or more characters,<br> uppercase, lowercase, number and a special character</label> </div> </label>
                <input class="login_input_2" type="password" name="password" id="password" required placeholder="Password" minlength="8"/>
            </div>
        </div>
        <div class="send_cancel">
            <div>
                <button class="btn"{{!-- class="btn" --}}id="login_button" type="submit" value="login" name="Login">Login</button>
            </div>
            <div>
                <button class="btn" id="cancel_login" type="reset" value="cancel" name="Cancel">Cancel</button>
            </div>
        </div>
        {{!-- <button type="submit" class="registerbtn"> Login </button> --}}
    </form>
  </div>
</div>

<!-- Register Modal -->
<div id="register_modal" class="modal">

<!-- Register Content -->
  <div class="modal-content">
    <span class="close close_register">&times;</span>
    <form id="register_page" action="/users/register" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="entry_box" >
            <h2>User Registration Form</h2>
            <div class="register_input_1">
                <label for="first_name">First name: </label>
                <input class="register_input_2" type="text" id="first_name" name="first_name" required placeholder="First name" />
                <label for="last_name">Last name: </label>
                <input class="register_input_2" type="text" id="last_name" name="last_name" required placeholder="Last name" />
            </div>
            <div class="register_input_1">
                <label for="user_name">Username: <div> <label id="user_message" class="small">Username must be 3 or more characters </label> </div> </label>
                <input class="input_single_row" type="text" id="username" name="username" required placeholder="Username" />
            </div>
            <div class="register_input_1">
                <label for="email">Email: <div> <label id="email_message" class="small">Email address must end with sfsu.edu or mail.sfsu.edu</label> </div></label>
                <input class="input_single_row" type="email" id="email" name="email" required placeholder="Email Address" />
            </div>
            {{!--<div>
                <label for="email">Email </label>
                <input type="email" id="email" name="email" required placeholder="Email Address" />
            </div>--}}
            <div class="register_input_1">
                <label for="password">Password: <div> <label id="password_message" class="small">Password must contain 8 or more characters, uppercase letter, lower case letter, number and a special character</label> </div> </label>
                <input class="input_single_row" id="register_password" type="password" name="password" required placeholder="Password" />
                {{!-- <i class="bi bi-eye-slash" id="togglePassword"></i> --}}
            </div>
            <div class="register_input_1">
                <label for="confirm_password">Confirm Password: <div> <label id="confirm_message" class="small"></label> </div> </label>
                <input class="input_single_row" id="confirm_password" type="password" required placeholder="Confirm Password" />
            </div>
        </div>
        <div class="flow_box" >
            <div class="container flow_box">
                <label for="profile_picture">Upload Image for Profile Picture </label>
                <input class="btn" type="file" id="profile_picture" name="profile_picture" accept="image/*">
                <label>Uploading a picture is optional, if no picture is provided a defualt will be used</label>
            </div>
            <div class="flow_box">
                <label for="ToS">Please Read and Accept </label>
                <div><a class="legal_link" href="">Term of Service</a> and <a class="legal_link" href="">Privacy Rules</a></div>
                <div>
                    <input type="checkbox" id="ToS" name="terms" value="agreement" required> 
                    <label for="terms" for = "invalidCheck">I agree to the Term of Service and Privacy Rules.</label>
                </div>
            </div>
            <div>
                <input type="checkbox" id="age" name="old" value="enough" required>
                <label for="old">I am 13 years or older.</label>
            </div>
            <div class="send_cancel">
                <div>
                    <button class="btn" type="submit" value="Register">Register</button>
                </div>
                <div>
                    <button class="btn" id="cancel_register" type="reset" value="cancel" name="Cancel" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </form>
  </div>
</div>

<!-- Submit Modal -->
<div id="submit_modal" class="modal">

<!-- Submit Content -->
  <div class="modal-content">
    <span class="close close_submit">&times;</span>
    <div>
        <h2>You have to login before submitting</h2>
        <button class="submitbtn" type="button" id="submit_login_button">Login</button> <br/><br/>
        <a>If you do not have an account feel free to register here!</a> <br/><br/>
        <button class="submitbtn" type="button" id="submit_register_button">Register</button>
    </div>
  </div>
</div>

