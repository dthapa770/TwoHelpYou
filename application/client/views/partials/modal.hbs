<head>
    <script defer type="text/javascript" src= "/js/modal.js"  ></script>
    <link rel='stylesheet' type="text/css" href='/stylesheets/modal.css' />
    <script defer type="text/javascript" src="/js/login.js"  ></script>
    <script defer type="text/javascript" src="/js/registration.js"  ></script>
    <link rel='stylesheet' type="text/css" href='/stylesheets/login.css' />
    <link rel="stylesheet" type="text/css" href='/stylesheets/register.css' />
