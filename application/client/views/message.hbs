<head>
    <script defer type="text/javascript" src="/js/message_form.js"  ></script>
    <link rel='stylesheet' type="text/css" href='/stylesheets/message.css' />
</head>

<div class="body">
    <form id="message_page" method="POST" action="/message/create/{{current_user.username}}"
        enctype="application/x-www-form-urlencoded">
        <h2>Send message</h2>
        <p id="username" >To: {{current_user.username}}</p>
        <div>
            {{#if logged}}
                <textarea class= "text_area" id="message-text" name = "message" value ="message" placeholder="Type your message here" rows="5"></textarea><br><br>
                <button class="button2" id="message-button" type="submit">Send</button> <br><br><br>
            {{else}}
                <p>You need to login or register an account before you can send message.</p><br><br>
                <div id="user_nav">
                    <a href="/login" class="button2">Login</a><br><br>
                    or <br><br>
                    <a href="/register" class="button2">Register</a><br><br><br>
                </div>
            {{/if}}
        </div>
    </form>
    
</div>